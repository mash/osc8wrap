{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "FILE_PATH=$(jq -r '.tool_input.file_path // empty') && [[ \"$FILE_PATH\" == *.go ]] && goimports -w \"$FILE_PATH\" || true"
          }
        ]
      }
    ]
  }
}
